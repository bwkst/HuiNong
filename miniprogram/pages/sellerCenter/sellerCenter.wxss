/* pages/buyerIndex/buyerIndex.wxss */
/*买家主页和卖家个人中心的样式*/
.buyerIndex {
  background-color: rgba(255, 255, 255, 100);
  width: 86%;
  align-items: center;
  border: 3rpx solid #FFD32F;
  margin-left: 7%;
  margin-right: 7%;
  height: 400rpx;
  margin-top: 60rpx;
  display: flex;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  flex-direction: column;
  justify-content: flex-end;
}

/*左边按钮的样式*/
.leftbutton {
  font-size: 0.8rem;
  width: 43%;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFDDBD;
  border-radius: 0rpx 0rpx 0rpx 10rpx;
}

/*右边按钮的样式*/
.rightbutton {
  font-size: 0.8rem;
  width: 43%;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFE996;
  border-radius: 0rpx 0rpx 10rpx 0rpx;
}

/*每一行文本的样式*/
.jibenxinxi {
  height: 50rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size: 0.8rem;
}

/*双按钮样式*/
.buttombutton {
  display: flex;
  width: 100%;
}

/*文本样式*/
.wenben {
  display: flex;
  flex-direction: column;
  width: 60%;
}

/*图片和文本组合样式*/
.beyond {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}

/*图片样式*/
.tupian {
  height: 180rpx;
  width: 180rpx;
  position: relative;
  left: 5%;
  top: 15%;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}

.buttonRow {
  margin: 50rpx 7% 0rpx 7%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.buttonForNew {
  padding: 15rpx;
  height: fit-content;
  border: 2rpx dashed #264841;
  border-radius: 50rpx;
  background-color: #FFE996;
}