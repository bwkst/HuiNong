<!--pages/register/register.wxml-->
<view class="aa">
  <text class="aaa">欢迎选择惠农</text>  
</view>
<view class="bb">
  <text class="bbb">助力农人交流</text>  
</view>

<view class="select-box">
    <text class="current-name">身份</text>
</view>

<view class="first">
    <input id="phonenumber" placeholder='手机号码' placeholder-class="plas" class='inputs' type='number' bindinput="phonenumberInput"></input>
</view>
<view class="second">
    <input id="name" placeholder='昵称' placeholder-class="plas" class='inputs' type='text' bindinput="usernameInput"></input>
</view>
<view class="thrid">
    <input id="psw" placeholder='输入您的密码' placeholder-class="plas" class='inputs' type='password' bindinput="passwordInput"></input>
</view>
<view class="fourth">
    <input id="pswack" placeholder='确认您的密码' placeholder-class="plas" class='inputs' type='password' bindinput="passwordInputACK"></input>
   </view>  
   
   <view class="cc">
  <text class="ccc">保密问题：</text>  
</view>
<view class="fifth">
    <input id="IDnumber" placeholder='输入身份证后四位' placeholder-class="plas" class='inputs' type='number'bindinput="IDnumberInput" ></input>
</view>
<view id="btn" class="click" bindtap="regist">注册</view>
<view class="dd" bindtap="login">
  <text class="ddd">已有账户？立即登录</text>  
</view>
