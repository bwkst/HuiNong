/* pages/buyerIndex/buyerIndex.wxss */
/*买家主页和卖家个人中心的样式*/
.buyerIndex {
  background-color: rgba(255, 255, 255, 100);
  width: 88%;
  border: 3rpx solid #FFD32F;
  margin-left: 6%;
  margin-right: 6%;
  height: fit-content; 
  margin-top: 60rpx;
  display: flex;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  flex-direction: column;
  justify-content: flex-end;
}

/*左边按钮的样式*/
.leftbutton {
  font-size: 0.8rem;
  width: 43%;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFDDBD;
  border-radius: 0rpx 0rpx 0rpx 10rpx;
}

/*右边按钮的样式*/
.rightbutton {
  font-size: 0.8rem;
  width: 43%;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFE996;
  border-radius: 0rpx 0rpx 10rpx 0rpx;
}

/*每一行文本的样式*/
.jibenxinxi {
  height: 40rpx;
  margin-top: 25rpx;
  margin-left: 40rpx;
  font-size: 0.8rem;
}
.jibenxinxi2 {
  margin-top: 25rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  font-size: 0.8rem;
}

/*双按钮样式*/
.buttombutton {
  display: flex;
  width: 100%;
}

/*文本样式*/
.wenben {
  display: flex;
  flex-direction: column;
  width:60%;
}

/*图片和文本组合样式*/
.beyond {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
}

/*图片样式*/
.tupian {
  height: 160rpx;
  width: 160rpx;
  position: relative;
  left: 8%;
  margin-top: 5%;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}