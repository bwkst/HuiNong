<scroll-view scroll-y="true">
  <view class="sellerIndex" wx:for="{{datalist}}" wx:key="index">
    <view class="beyond">
        <view class='henpai'>
          <view class="jibenxinxi">产品： {{item.orderGoodsName}}</view>
        </view>
        <view class='henpai'>
          <view class="jibenxinxi">付款金额： {{item.orderPrice}}元</view>
          <view class="jibenxinxi">数量： {{item.orderAmount}}斤</view>
        </view>
        <view class='henpai' style="width: 600rpx;">
          <view class="jibenxinxi" wx:if="{{item.orderExpressNo}}">快递单号:{{item.orderExpressNo}}</view>
          <view class="jibenxinxi" wx:else="">快递单号：暂无</view>
        </view>
        <view class='henpai' style="width: 600rpx;">
          <view class="jibenxinxi" style="width: 100%;">买家号码： {{item.orderBuyerPhoneNo}}
            <icon  type="info_circle" size="12" bindtap="info"></icon>
          </view>
        </view>
        <view class='henpai' style="width: 600rpx;">
          <view class="jibenxinxi" style="width: 100%;">运货地址:{{item.orderDeliveryAddress}}</view>
        </view>
    </view>
    <view class="buttombutton">
      <view class="leftbutton" bindtap="chakan" data-index="{{item._id}}" wx:if="{{item.orderExpressNo}}">已寄出(点击查看快递单号)</view>
      <view class="leftbutton" bindtap="tianxie" data-index="{{item._id}}" wx:else>未发货(点击填写快递单号)</view>
      <view class="rightbutton" bindtap="delete"data-index="{{item._id}}">打回订单</view>
    </view>
  </view>
</scroll-view>

<view style="height: 200rpx"></view>
<view class="navigationBar">
  <button class="navigationButton" style="width: 375rpx;">
    <image src="../../img/indexC.png" class="navigationImage"></image>
    <text class="navigate_buttontext">主页</text>
  </button>
  <button class="navigationButton" style="width: 375rpx;" bindtap="sellerCenterPage">
    <image src="../../img/centerNC.png" class="navigationImage"></image>
    <text class="navigate_buttontext">个人中心</text>
  </button>
</view>