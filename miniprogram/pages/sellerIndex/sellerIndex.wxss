/*买家主页和卖家个人中心的样式*/
.sellerIndex {
  background-color: rgba(255, 255, 255, 100);
  width: 86%;
  align-items: center;
  border: 3rpx solid #FFD32F;
  margin-left: 7%;
  margin-right: 7%;
  height: 347rpx;
  margin-top: 60rpx;
  display: flex;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  flex-direction: column;
  justify-content: flex-end;
}

/*底部按钮的样式*/
.button {
  font-size: 0.8rem;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFE996;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

/*每一项文本的样式*/
.jibenxinxi {
  width: 300rpx;
  font-size: 0.8rem;
  display: flex;
  align-items: center;
}

/*底部操作框的样式*/
.buttombutton {
  display: flex;
  width: 100%;
  height: 20%;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

/*文本组合样式*/
.beyond {
  margin-top: 2.5%;
  margin-bottom: 2.5%;
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 80%;
  justify-content:space-around;
}

/*填写快递单号的输入框*/
.danhao {
  background-color: #FFE996;
  width: 100%;
  height: 100%;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

/*左边按钮的样式*/
.leftbutton {
  font-size: 0.8rem;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFDDBD;
  border-radius: 0rpx 0rpx 0rpx 10rpx;
}

/*右边按钮的样式*/
.rightbutton {
  font-size: 0.8rem;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFE996;
  border-radius: 0rpx 0rpx 10rpx 0rpx;
}

/*每个小横排的样式*/
.henpai{
  width: 600rpx;
  display: flex;
  height: fit-content;
}
