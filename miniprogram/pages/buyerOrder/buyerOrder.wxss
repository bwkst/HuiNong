/*收货地址*/
.address {
  width: 86%;
  height: 80rpx;
  margin: 60rpx 7% 30rpx 7%;
  display: flex;
  flex-direction: row;
}

.wenzi {
  font-size: 1.4rem;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  text-align: center;
  align-items: center;
}

/*收货地址框*/
.buyerAddress {
  background-color: rgba(255, 255, 255, 100);
  width: 86%;
  align-items: center;
  border: 5rpx solid #FFD32F;
  margin-left: 7%;
  margin-right: 7%;
  height: 450rpx;
  margin-top: 40rpx;
  display: flex;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  flex-direction: column;
  justify-content: flex-end;
}

.xinxi {
  height: 40rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 0.8rem;
}

/*底部按钮的样式*/
.button {
  font-size: 0.8rem;
  margin-top: 0%;
  margin-bottom: 0%;
  background-color: #FFE996;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

/*每一行文本的样式*/
.jibenxinxi {
  height: 40rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 0.8rem;
}

/*底部操作框的样式*/
.buttombutton {
  display: flex;
  width: 100%;
  height: 20%;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

/*文本样式*/
.wenben {
  display: flex;
  flex-direction: column;
  width: 100%;
}

/*文本组合样式*/
.beyond {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 95%;
}

/*双按钮样式*/
.buttombutton2 {
  display: flex;
  width: 100%;
}

/*右边按钮的样式*/
.button2 {
  background-color: #FFE996;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  margin: auto;
  margin-top: 80rpx;
  margin-left: 200rpx;
  margin-right: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 1.1rem;
  border-radius: 7rpx;
}

.changeAddressButton {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #FFE996;
  margin: 5rpx;
  height: 70rpx;
  font-size: 0.9rem;
  border-radius: 7rpx;
}