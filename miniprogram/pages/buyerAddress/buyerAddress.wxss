.address {
  width: 90%;
  height: 50rpx;
  margin: 60rpx 7% 60rpx 7%;
}

.wenzi {
  font-size: 1.3rem;
}

/*收货地址框*/
.buyerAddress {
  background-color: rgba(255, 255, 255, 100);
  align-items: center;
  border: 5rpx solid #FFD32F;
  margin: 8%;
  padding: 5% 2% 5% 2%;
  height: fit-content;
  display: flex;
  border-radius: 10rpx;
  flex-direction: column;
  justify-content: flex-end;
}

.xinxi {
  height: 50rpx;
  margin: 20rpx;
  font-size: 1rem;
}

/*每一行文本的样式*/
.jibenxinxi {
  height: 40rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 0.8rem;
}

/*底部操作框的样式*/
.buttombutton {
  display: flex;
  width: 100%;
  height: 20%;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

/*文本样式*/
.wenben {
  display: flex;
  flex-direction: column;
  width: 100%;
}

/*文本组合样式*/
.beyond {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 95%;
}

/*按钮的样式*/
.button2 {
  background-color: #FFE996;
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  margin: auto;
  margin-top: 80rpx;
  margin-left: 200rpx;
  margin-right: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 1.1rem;
  border-radius: 7rpx;
}